<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sportsCardCVID"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/mainHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="@dimen/list_margin_left"
            android:layout_marginRight="@dimen/list_margin_right"
            android:layout_marginTop="2dp"
            >
            <!--android:padding="5sp"-->

            <TextView
                android:id="@+id/singleSlotTimeTVID"
                style="@style/headerTitle"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text=""
                android:textColor="#4CAF50" />

            <RelativeLayout
                android:id="@+id/balance_container_list"
                android:layout_width="110dp"
                android:layout_height="55dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end|right|center_vertical"
                    android:layout_toLeftOf="@+id/addToCartRLID"
                    android:gravity="right|center_vertical"
                    android:layout_marginRight="3dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/balance_amount_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end|right|center_vertical"
                        android:text="250"
                        android:textColor="@color/citrus_white"
                        android:textSize="16sp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/addToCartRLID"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/addToCartBtnID"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/add_to_cart" />

                    <!--<Button
                        android:id="@+id/removeCartItemBtnID"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:background="@drawable/remove_from_cart" />-->
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>