<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="@color/colorPrimaryDark" />
      <stroke
          android:width="1dp"
          android:color="#FFF" />
      <corners
          android:radius="0dp" />
      <padding
          android:left="4dp"
          android:top="4dp"
          android:right="4dp"
          android:bottom="4dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#4DD0E1AC"
          android:endColor="#4DD0E1AC"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="@color/white" />
      <corners
          android:radius="0dp" />
      <padding
          android:left="4dp"
          android:top="4dp"
          android:right="4dp"
          android:bottom="4dp" />
    </shape>
  </item>
</selector>